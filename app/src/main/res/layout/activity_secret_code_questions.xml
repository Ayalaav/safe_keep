<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Security Check Question"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:id="@+id/rg_security_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi! Where is the charger for the iPad?" />

        <RadioButton
            android:id="@+id/rb_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you know where I left my car keys?" />

        <RadioButton
            android:id="@+id/rb_question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where is the dog's leash?" />

        <RadioButton
            android:id="@+id/rb_question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you see my headphones?" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_select_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
</LinearLayout>